{% extends 'base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block body %}
    <h1>Transaction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Amount</th>
                <td>{{ transaction.amount }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ transaction.location }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ transaction.title }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ transaction.createdAt ? transaction.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ transaction.updatedAt ? transaction.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('transaction_index', { 'slug' : transaction.account.slug }) }}">back to list</a>

    <a href="{{ path('transaction_edit', {'id': transaction.id, 'slug' : transaction.account.slug }) }}">edit</a>

    {{ include('transaction/_delete_form.html.twig') }}
{% endblock %}
