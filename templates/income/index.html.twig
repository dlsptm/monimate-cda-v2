{% extends 'base.html.twig' %}

{% block title %}Income index{% endblock %}

{% block body %}
    <h1>Income index</h1>


    <div class="relative overflow-x-auto shadow-md sm:rounded-lg mb-3">
        {% if incomes|length > 0 %}
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-blue-300 dark:text-blue-500">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Montant
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Titre
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Date de création
                    </th>
                    <th scope="col" class="px-6 py-3">
                        <span class="sr-only">Action</span>
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for income in incomes %}
                    <tr>
                        <td class="px-6 py-4">
                            {{ income.amount }}€
                        </td>
                        <td class="px-6 py-4">
                            {{ income.title }}
                        </td>
                        <td class="px-6 py-4">
                            {{ income.getCreatedAt() ? income.getCreatedAt().format('d-m-Y') : '' }}
                        </td>
                        <td class="px-6 py-4">
                            <a href="{{ path('app_income_edit', {'id' : income.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Vous n'avez pas encore de rentrée d'argent.</p>
        {% endif %}
    </div>

    <a href="{{ path('app_income_new') }}">Create new</a>
{% endblock %}
